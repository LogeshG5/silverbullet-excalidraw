{
  "tasks": {
    "setup": "npm install --prefix editor",
    "build:editor": "npm run build --prefix editor",
    "build:plugin": "deno run -A https://github.com/silverbulletmd/silverbullet/releases/download/edge/plug-compile.js -c deno.jsonc excalidraw.plug.yaml",
    "build": "deno run build:editor && deno run build:plugin",
    "watch": "deno run -A https://github.com/silverbulletmd/silverbullet/releases/download/edge/plug-compile.js -w -c deno.jsonc excalidraw.plug.yaml"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.plug.js"
    ]
  },
  "imports": {
    "@silverbulletmd/silverbullet": "jsr:@silverbulletmd/silverbullet@^0.10.4",
    "handlebars": "https://esm.sh/handlebars",
    "$sb/": "https://deno.land/x/silverbullet@0.10.4/plug-api/"
  }
}
