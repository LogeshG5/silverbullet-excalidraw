{
  "name": "excalidraw-plugin-assets",
  "version": "0.1.0",
  "main": "src/index.js",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "@excalidraw/excalidraw": "^0.18.0",
    "browser-fs-access": "0.29.1"
  },

  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "vite": "5.0.12",
    "typescript": "^5"
  },

  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    }
  },
  "scripts": {
    "start": "vite",
    "build-dev": "vite build",
    "build": "esbuild src/index.tsx --minify --bundle --outfile=../assets/editor.js --conditions=production --external:*.woff2  --external:@excalidraw/mermaid-to-excalidraw --format=iife --metafile=meta.json",
    "preview": "vite preview --port 5002",
    "build:preview": "yarn build && yarn preview",
    "build:packages": "yarn --cwd ../../ build:packages"
  },

  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.8.1"
}
